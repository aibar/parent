<project>
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>walkingdevs.maven</groupId>
        <artifactId>parent</artifactId>
        <version>1</version>
    </parent>

    <artifactId>plugins-parent</artifactId>
    <packaging>pom</packaging>

    <dependencies>
        <dependency>
            <groupId>org.apache.maven</groupId>
            <artifactId>maven-plugin-api</artifactId>
            <version>${maven-plugin-api.v}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.maven.plugin-tools</groupId>
            <artifactId>maven-plugin-annotations</artifactId>
            <version>${maven-plugin-annotations.v}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-plugin-plugin</artifactId>
                <version>${maven-plugin-pl.v}</version>
                <configuration>
                    <skipErrorNoDescriptorsFound>true</skipErrorNoDescriptorsFound>
                </configuration>
                <executions>
                    <execution>
                        <id>mojo-descriptor</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>descriptor</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <maven-plugin-api.v>2.0</maven-plugin-api.v>
        <maven-plugin-pl.v>3.5</maven-plugin-pl.v>
        <maven-plugin-annotations.v>${maven-plugin-pl.v}</maven-plugin-annotations.v>
    </properties>
</project>